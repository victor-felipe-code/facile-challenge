{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "strictNullChecks": true,
    "lib": ["es6"],
    "typeRoots": ["./src/@types", "node_modules/@types"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "jest"]
}
